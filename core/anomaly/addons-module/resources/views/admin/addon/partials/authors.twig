{% if addon.getAuthors() %}
    <h3 class="lead">
        {{ trans('anomaly.module.addons::label.authors') }}
    </h3>

    {% for author in addon.getAuthors() %}
        <dl>

            <dt>{{ author.name }} <span class="text-muted">({{ author.role }})</span></dt>

            {% if author.homepage %}
                <dd><a href="{{ author.homepage }}" target="_blank">{{ author.homepage }}</a></dd>
            {% endif %}

            {% if author.email %}
                <dd>{{ html_mailto(author.email) }}</dd>
            {% endif %}

        </dl>
    {% endfor %}
{% endif %}
